<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    tools:background="@drawable/bg_gradient">

    <TextView
        android:id="@+id/hourlyTimeLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:textSize="24sp"
        tools:text="12 AM" />

    <ImageView
        android:id="@+id/hourlyIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/hourlyTimeLabel"
        android:layout_toRightOf="@+id/hourlyTimeLabel"
        app:srcCompat="@drawable/clear_day" />

    <TextView
        android:id="@+id/hourlyTemperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:textSize="24sp"
        tools:text="100" />

    <TextView
        android:id="@+id/hourlySummaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/hourlyIconView"
        android:layout_toLeftOf="@id/hourlyTemperatureLabel"
        android:layout_toRightOf="@+id/hourlyIconView"
        android:layout_toStartOf="@id/hourlyTemperatureLabel"
        android:gravity="start"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#fff"
        tools:text="Clear days wail the skies" />

</RelativeLayout>